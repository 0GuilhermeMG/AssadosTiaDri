@model SistemaPDVAssadosTiaDri.Models.Venda

<h2>Itens da Venda</h2>
<p>Data da Venda: @Model.DataVenda</p>
<p>Total da Venda: @Model.Total.ToString("C")</p>

<table>
    <thead>
        <tr>
            <th>Produto</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Itens)
        {
            <tr>
                <td>@item.Produto.Nome</td> <!-- Exibe o nome do produto -->
                <td>@item.Preco.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
