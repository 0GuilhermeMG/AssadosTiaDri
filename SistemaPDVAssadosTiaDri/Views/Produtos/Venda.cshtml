@model List<SistemaPDVAssadosTiaDri.Models.Produto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Venda";
}

<h2>Venda de Produtos</h2>

<!-- Formulário para entrada de código de barras -->
<form asp-action="AdicionarProduto" method="post">
    <label for="codigoBarras">Código de Barras:</label>
    <input type="text" id="codigoBarras" name="codigoBarras" required />
    <button type="submit">Adicionar Produto</button>
</form>

<!-- Exibição dos produtos no carrinho -->
@if (Model != null && Model.Count > 0)
{
    <h3>Produtos no Carrinho:</h3>
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Preco</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Exibição do total -->
    <h3>Total: @ViewBag.Total</h3>
}
else
{
    <p>Nenhum produto no carrinho.</p>
}

<!-- Script para o Browser Refresh -->
<script src="/_framework/aspnetcore-browser-refresh.js"></script>
