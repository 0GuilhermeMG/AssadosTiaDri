@model List<SistemaPDVAssadosTiaDri.Models.Produto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Venda";
}

<h2>Venda de Produtos</h2>

<!-- Formulário para entrada de código de barras -->
<form id="barcodeForm" asp-action="AdicionarProduto" method="post">
    <label for="codigoBarras">Código de Barras:</label>
    <input type="text" id="codigoBarras" name="codigoBarras" required autofocus />
</form>

<script >
    src = "/_framework/aspnetcore-browser-refresh.js"
    document.getElementById('codigoBarras').addEventListener('input', function () {
        if (this.value.length == 13) {
            document.getElementById('barcodeForm').submit();
        }
    });
</script>

<!-- Exibição dos produtos no carrinho -->
@if (Model != null && Model.Count > 0)
{
    <h3>Produtos no Carrinho:</h3>
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Preço</th> 
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                //decimal precoDoBanco = preco / produto.Preco;

                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Preco.ToString("C")</td>
                    <td>
                        <form method="post" asp-action="RemoverItem">
                            <input type="hidden" name="produtoId" value="@produto.ProdutoId" />
                            <input type="hidden" name="preco" value="@produto.Preco" />
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Exibição do total -->
    <h3>Total: @ViewBag.Total.ToString("C")</h3>
}
else
{
    <p>Nenhum produto no carrinho.</p>
}

<form asp-action="FinalizarVenda" method="post">
    <button type="submit" id="FinalizarVenda">Finalizar Venda</button>
</form>

