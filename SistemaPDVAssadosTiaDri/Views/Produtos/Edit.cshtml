@model SistemaPDVAssadosTiaDri.Models.Produto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<div class="content-header" style="margin-left: 60px">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Editar Produto</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Início</a></li>
                    <li class="breadcrumb-item"><a href="../">Produtos</a></li>
                    <li class="breadcrumb-item active">Editar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content" style="margin-left: 60px">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header bg-warning">
                <h3 class="card-title">Editar Detalhes do Produto</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProdutoId" />

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Preco" class="control-label">Preço</label>
                        <input asp-for="Preco" class="form-control" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CodigoDeBarras" class="control-label">Código de Barras</label>
                        <input asp-for="CodigoDeBarras" class="form-control" />
                        <span asp-validation-for="CodigoDeBarras" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" value="Salvar" class="btn btn-success" placeholder="&#xf002 Search" >
                            Salvar <i class="fas fa-save"></i>
                        </button>
                       
                        <a href="../" class="btn btn-danger ml-2">Cancelar <i class="fas fa-arrow-left"></i></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


