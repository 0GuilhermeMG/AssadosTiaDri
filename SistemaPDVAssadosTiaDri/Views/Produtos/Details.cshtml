@model SistemaPDVAssadosTiaDri.Models.Produto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<div class="content-header" style="margin-left: 60px">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Detalhes do Produto</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Início</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Produtos</a></li>
                    <li class="breadcrumb-item active">Detalhes</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content" style="margin-left: 60px">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title">Informações do Produto</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Preco)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Preco)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.CodigoDeBarras)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CodigoDeBarras)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model?.ProdutoId" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a href="../" class="btn btn-danger">
                    Voltar à lista<i class="fas fa-arrow-left"></i>
                </a>
            </div>
        </div>
    </div>
</section>
